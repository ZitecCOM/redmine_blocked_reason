<% blocked_reason_types ||= BlockedReasonType.where(removed: false).order(:created_at) %>
<% if blocked_reason_types.any? %>
  <table class='list'>
    <thead>
      <th><%= t('types_title') %></th>
      <th><%= t('css_class_title') %></th>
      <th></th>
    </thead>
    <tbody>
      <% blocked_reason_types.each do |brt| %>
        <tr class='<%= cycle 'odd', 'even'%>'>
          <td class='name'>
            <%= link_to h(brt.name), edit_blocked_reason_type_path(brt) %>
          </td>
          <td class='css_class'>
            <%= link_to h(brt.css_class), edit_blocked_reason_type_path(brt) %>
          </td>
          <td class='buttons'>
            <%= delete_link brt %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class='nodata'><%= l(:label_no_data) %></div>
<% end %>
<%= link_to l('new_type'), new_blocked_reason_type_path, :class => 'icon icon-add' %>
